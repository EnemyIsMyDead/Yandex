<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_translate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yandextranslater.Main"
    >


    <EditText android:id="@+id/etQuestion"
        android:hint="введите текст"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnTranslate"
        android:textSize="18sp"
        android:background="@android:drawable/editbox_background"
        />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:id="@+id/btnTranslate"
        android:background="@color/colorPrimary" />

    <EditText
        android:id="@+id/etAnswer"
        android:hint="прочтите текст"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_below="@+id/btnTranslate"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/editbox_background"/>


</RelativeLayout>
